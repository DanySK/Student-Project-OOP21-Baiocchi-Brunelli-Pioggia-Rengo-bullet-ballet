<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<FlowPane columnHalignment="CENTER" orientation="VERTICAL" prefHeight="603.0" prefWidth="722.0" style="-fx-background-color: MidnightBLue; -fx-border-color: Turquoise; -fx-border-style: Dotted; -fx-border-width: 3;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.pensilina14.bullet.ballet.menu.controller.GameStatsController">
   <children>
      <Label alignment="CENTER" contentDisplay="TOP" prefHeight="50.0" prefWidth="785.0" text="%lblGameStats.text">
         <font>
            <Font name="Comic Sans MS Bold" size="48.0" />
         </font>
         <effect>
            <InnerShadow choke="0.02">
               <color>
                  <Color red="1.0" green="0.125490203499794" blue="0.125490203499794" />
               </color>
            </InnerShadow>
         </effect>
      </Label>
      <TableView fx:id="tableView" prefHeight="334.0" style="-fx-background-color: white; -fx-background-radius: 30;">
        <columns>
          <TableColumn fx:id="playerName" prefWidth="133.0" text="%tableColPlayer.text" />
          <TableColumn fx:id="points" prefWidth="119.0" text="%tableColPoints.text" />
            <TableColumn fx:id="time" prefWidth="132.0" text="%tableColTime.text" />
        </columns>
         <FlowPane.margin>
            <Insets bottom="50.0" left="200.0" right="200.0" top="20.0" />
         </FlowPane.margin>
      </TableView>
      <Button mnemonicParsing="false" onMouseClicked="#goBackOnMouseClick" prefHeight="50.0" prefWidth="320.0" text="%btnStatsGoBack.text" textFill="#d32c2c">
         <effect>
            <DropShadow height="39.2" radius="28.27" spread="0.18" width="75.88">
               <color>
                  <Color red="0.9210526347160339" green="0.12365984171628952" blue="0.12365984171628952" />
               </color>
            </DropShadow>
         </effect>
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Button>
   </children>
</FlowPane>
